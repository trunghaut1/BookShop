@model IEnumerable<Book>

@foreach (var i in Model)
{
    <div class="row c-margin-b-40">
        <div class="c-content-product-2 c-bg-white">
            <div class="col-md-4">
                <div class="c-content-overlay">
                    <div class="c-overlay-wrapper">
                        <div class="c-overlay-content">
                            <a asp-action="Book" asp-controller="Home" asp-route-id="@i.ID" class="btn btn-md c-btn-grey-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">Xem</a>
                        </div>
                    </div>
                    <div class="c-bg-img-center c-overlay-object" data-height="height" style="height: 230px; background-image: url(data:image/jpg;base64,@i.Image);"></div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="c-info-list">
                    <h3 class="c-title c-font-bold c-font-22 c-font-dark">
                        <a class="c-theme-link" asp-action="Book" asp-controller="Home" asp-route-id="@i.ID">@i.Name</a>
                    </h3>
                    <h4 class="c-title c-font-bold c-font-dark">
                        Tác giả: @i.Author
                    </h4>
                    <p class="c-desc c-font-16 c-font-thin">@i.Summary.Substring(0, i.Summary.Length > 310 ? 310 : i.Summary.Length)...</p>
                    <p class="c-price c-font-26 c-font-thin c-font-red">
                        @(((int)i.Price).ToString("c"))
                    </p>
                </div>
                <div>
                    @if (i.Quantity > 0)
                    {
                        <button type="submit" onclick="AddToCart(@i.ID,1,true)" class="btn btn-sm c-theme-btn c-btn-square c-btn-uppercase c-btn-bold">
                            <i class="fa fa-shopping-cart"></i>Thêm vào giỏ
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-sm c-theme-btn c-btn-square c-btn-uppercase c-btn-bold">
                            <i class="fa fa-shopping-cart"></i>Hết hàng
                        </button>
                    }

                </div>
            </div>
        </div>
    </div>
}